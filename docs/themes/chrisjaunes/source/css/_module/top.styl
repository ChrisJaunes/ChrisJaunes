.top
    position relative
    @extend .background
    .top-info
        padding 100px 0px
        position relative
        z-index 10
    .site-name
        font-size: $siteTitleSize
        font-weight bold
        text-align center;
        @extend .textShadow
        small
            display block
            color #ffffff
            font-size 14px
            font-weight normal
        a
            color #fff
            display block
    .account-list
        float right
        margin-top 45px
        li
            display inline-block
            margin 0px 10px
            a
                @extend .textShadow
                font-size 20px
                color #ffffff
                transition(color)
                &:hover
                    color $themeColor
